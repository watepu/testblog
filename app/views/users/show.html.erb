<h2><%= @user.name %>のページ</h2>

<p>メールアドレス：<%= @user.email %></p>

<h3>お気に入り一覧</h3>
<% @favorite_blogs.each do |blog| %>
  <p>タイトル：<%= blog.title %>,内容：<%= blog.content %></p>
<% end %>

<p>アイコン</p>
<%= form_with(model: @user, local: true) do |form| %>
<%= @user.image %>


  <div class="field">
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

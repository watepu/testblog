<h2>ユーザー</h2>

<% @users.each do |user| %>
  <% if current_user.id != user.id %>
    <%= link_to user.name, user_path(user.id) %>
    <%= user.email %>
    <%= render 'follow_form', user: user %>
      <div class="item">
        <%= link_to "メッセージ", conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
      </div>
  <% end %>
<% end %>
